<UserControl x:Class="VisualHFT.Studies.Template.UserControls.TemplateStudyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisualHFT.Studies.Template.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <!-- 
        This is an optional custom UI component for your study.
        Use this to create visualizations, charts, or custom displays.
        Remove if not needed for your study.
    -->
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Template Study" Foreground="White" FontWeight="Bold" FontSize="14"/>
                <TextBlock Text="{Binding CurrentSymbol, StringFormat=' - {0}'}" 
                           Foreground="#FF00FF7F" FontSize="14" Margin="10,0,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="0,10">
            <!-- Example: Display calculated value -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Current Value" HorizontalAlignment="Center" FontSize="12" Foreground="Gray"/>
                <TextBlock Text="{Binding CurrentValue, StringFormat='N4'}" 
                           HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" 
                           Foreground="{Binding ValueColor}"/>
                
                <!-- Example: Simple indicator -->
                <Rectangle Height="3" Width="200" Margin="0,10,0,0" 
                           Fill="{Binding IndicatorColor}" 
                           Opacity="0.8"/>
            </StackPanel>
            
            <!-- Uncomment and use for charts -->
            <!--
            <oxy:PlotView Model="{Binding ChartModel}" 
                          Background="Transparent"
                          Foreground="White"/>
            -->
        </Grid>
        
        <!-- Footer -->
        <Border Grid.Row="2" Background="#FF2D2D30" Padding="10,5">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Last Update: " Foreground="Gray" FontSize="11"/>
                <TextBlock Text="{Binding LastUpdateTime}" Foreground="White" FontSize="11"/>
                <TextBlock Text="  |  " Foreground="Gray" FontSize="11"/>
                <TextBlock Text="{Binding UpdateCount, StringFormat='Updates: {0}'}" 
                           Foreground="Gray" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
